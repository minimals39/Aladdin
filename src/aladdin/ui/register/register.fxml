<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="300.0" style="-fx-background-color: grey;" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aladdin.ui.register.RegisterController">
    <stylesheets>
        <URL value="@register.css" />
    </stylesheets>
   <children>
      <VBox prefHeight="617.0" prefWidth="360.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane prefHeight="76.0" prefWidth="300.0" style="-fx-background-color: orange;">
               <children>
                  <Text layoutX="87.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Register">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Text>
               </children>
            </AnchorPane>
            <TextField fx:id="username" promptText="Username">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="40.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="pass" promptText="Password">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="passcheck" promptText="Conform Password">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <TextField fx:id="name" promptText="Name">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="surname" promptText="Surname">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="PayMent" promptText="Bank Account/Credit Card">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField promptText="Security Number/CCV">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="MoreInfo" prefHeight="200.0" prefWidth="200.0" promptText="Address/about you">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </TextArea>
            <AnchorPane prefHeight="35.0" prefWidth="300.0">
               <children>
                  <RadioButton fx:id="buyer" layoutX="51.0" layoutY="9.0" mnemonicParsing="false" onAction="#isBuyer" text="buyer">
                     <toggleGroup>
                        <ToggleGroup fx:id="usertype" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="seller" layoutX="198.0" layoutY="9.0" mnemonicParsing="false" onAction="#isSeller" text="seller" toggleGroup="$usertype" />
               </children>
            </AnchorPane>
            <Button fx:id="confirm" mnemonicParsing="false" onAction="#confirm" text="confirm">
               <VBox.margin>
                  <Insets bottom="50.0" left="125.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
